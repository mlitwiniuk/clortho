= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'card card-md' }) do |f|
  .card-body
    %h2.mb-5.text-center Sign up
    = render "devise/shared/error_messages", resource: resource
    .mb-3
      = f.label :email, 'Email', class: 'form-label'
      = f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email Address"
    .mb-3
      = f.label :password, 'Password', class: 'form-label'
      .input-group.input-group-flat
        = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control', data: { password_toggle_target: 'input' }
        %span.input-group-text{data: { action: 'click->password-toggle#togglePassword'}}
          %i.far.fa-eye
    .mb-3
      = f.label :password_confirmation, 'Password', class: 'form-label'
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password'
    .form-footer
      = f.submit "Sign up", class: "btn btn-primary btn-block btn-lg"
  = render "devise/shared/links"
