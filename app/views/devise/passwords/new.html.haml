= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'card card-md' }) do |f|
  .card-body
    %h2.mb-5.text-center Reset your password
    = render "devise/shared/error_messages", resource: resource
    %p.mb-3.text-center Enter your email address below and we will send you a link to reset your password.
    .mb-3
      = f.label :email, 'Email', class: 'form-label'
      = f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email Address"
    .form-footer
      = f.submit "Send password reset email", class: 'btn btn-primary btn-block btn-lg'
  = render "devise/shared/links"
