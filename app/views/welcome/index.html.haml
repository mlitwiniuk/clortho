.page-header.d-print-none
  .row.align-items-center
    .col
      %h2.page-title
        Clortho - manage ssh keys on your servers
.row.row-cards
  - @servers.each do |server|
    .col.col-xs-12.col-lg-3
      .card
        .card-body
          %h3
            = link_to server.identifier, server
          = link_to server.full_address, server, class: 'text-secondary'
        .card-footer{title: 'Last synchronized at'}
          %i.fa.fa-clock
          = l(server.last_synchronized_at) if server.last_synchronized_at
