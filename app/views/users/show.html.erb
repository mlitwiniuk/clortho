<div class="card">
  <div class="card-header justify-content-between">
    <h3 class="card-title">Show user</h3>
    <span>
      <%= link_to users_path, class: 'btn btn-link' do %>
      All Users
      <% end %>
      /
      <%= link_to edit_user_path(@user), class: 'btn btn-link' do %>
      Edit
      <% end %>
    </span>
  </div>
  <div class="card-body">
    <dl class="dl-horizontal">
      <dt>Email:</dt>
      <dd><%= @user.email %></dd>

      <dt>Username:</dt>
      <dd><%= @user.username %></dd>

    </dl>
  </div>
</div>